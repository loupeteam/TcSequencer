    <Method Name="Start" Id="{52f1f4d2-13d6-46fb-aa1f-c1affcffbade}" FolderPath="Internal\PLCopenCaller\">
      <Declaration><![CDATA[
METHOD Start : PLCopenStatusBase
VAR_INPUT
  Command : IPLCopenCommand;
END_VAR
VAR
	_status : PLCopenStatusBase;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[
// Copyright (c) 2024 Loupe (https://loupe.team), provided under the MIT License.
_status := _activeTasks.Start(Command);
IF  _status <> PLCopenStatusBase.BUSY THEN
  // TODO: All out of commands.. Throw an error
  sequenceError(10000, 'Too Many Commands in 1 step');
END_IF
Start := _status;
]]></ST>
      </Implementation>
