	Status : IPLCopenCaller;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[
// Copyright (c) 2024 Loupe (https://loupe.team), provided under the MIT License.
IF Status <> 0 THEN
	Status.Start(Command.Start);
ELSE
	Command.Start.Execute := TRUE;
END_IF
]]></ST>
